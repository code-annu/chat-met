<!-- Navbar Component -->
<nav class="w-full bg-white shadow-md">
  <div class="max-w-4xl mx-auto px-4 py-3 flex justify-between items-center">
    <!-- Left: Logo or App Name -->
    <div class="text-2xl font-bold text-blue-600">ChatMet</div>

    <!-- Right: Buttons based on user login state -->
    <div class="space-x-4">
      <% if (user) { %>
        <!-- Profile Button when user is logged in -->
        <a
          href="/profile"
          class="px-4 py-2 text-blue-500 hover:text-blue-600 hover:bg-blue-50 rounded transition"
        >
          Profile
        </a>
      <% } else { %>
        <!-- Login / Register buttons when no user -->
        <a
          href="/login-form"
          class="px-4 py-2 text-gray-700 hover:text-gray-900 hover:bg-gray-100 rounded transition"
        >
          Login
        </a>
        <a
          href="/register-form"
          class="px-4 py-2 bg-blue-500 text-white hover:bg-blue-600 rounded transition"
        >
          Register
        </a>
      <% } %>
    </div>
  </div>
</nav>
