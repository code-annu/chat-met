<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chats</title>
    <link href="/output.css" rel="stylesheet" />
  </head>
  <body class="bg-gray-100 min-h-screen flex items-center justify-center p-4">
    <div class="bg-white rounded-lg shadow-lg w-full max-w-md p-6">
      <h1 class="text-2xl font-semibold mb-4 text-gray-800">Your Chat Rooms</h1>

      <% if (user.roomIds && user.roomIds.length > 0) { %>
      <ul class="space-y-2">
        <% user.roomIds.forEach(roomId => { %>
        <li
          class="border border-gray-200 rounded-md hover:bg-blue-50 transition duration-150"
        >
          <a
            href="/chat/room/<%= roomId %>"
            class="block px-4 py-2 text-gray-700 hover:text-blue-600"
          >
            Chat Room: <%= roomId %>
          </a>
        </li>
        <% }); %>
      </ul>
      <div class="mt-6 space-x-2">
        <button
          id="btn-create"
          class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600"
        >
          Create New Room
        </button>
        <button
          id="btn-join"
          class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600"
        >
          Join a Room
        </button>
      </div>
      <% } else { %>
      <p class="text-gray-600 mb-4">You have no chat rooms yet.</p>
      <div class="space-x-2">
        <button
          id="btn-create"
          class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600"
        >
          Create a Room
        </button>
        <button
          id="btn-join"
          class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600"
        >
          Join a Room
        </button>
      </div>
      <% } %>

      <!-- Hidden forms -->

      <form
        id="form-create"
        action="/rooms/create"
        method="POST"
        class="mt-6 hidden"
      >
        <!-- <label class="block text-gray-700 mb-2">Room Name:</label> -->
        <input
          type="text"
          name="roomId"
          required
          class="w-full px-3 py-2 border rounded mb-4"
          placeholder="Enter room id"
        />
        <input
          type="text"
          name="roomName"
          required
          class="w-full px-3 py-2 border rounded mb-4"
          placeholder="Enter room name"
        />
        <input
          type="url"
          name="imageUrl"
          required
          class="w-full px-3 py-2 border rounded mb-4"
          placeholder="Enter room image URL"
        />
        <button
          type="submit"
          class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600"
        >
          Create
        </button>
        <button
          type="submit"
          id="cancel-create"
          class="ml-2 text-gray-600 hover:underline"
        >
          Cancel
        </button>
      </form>

      <form
        id="form-join"
        action="/rooms/join"
        method="POST"
        class="mt-6 hidden"
      >
        <label class="block text-gray-700 mb-2">Room ID:</label>
        <input
          type="text"
          name="roomId"
          required
          class="w-full px-3 py-2 border rounded mb-4"
          placeholder="Enter room ID"
        />
        <button
          type="submit"
          class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600"
        >
          Join
        </button>
        <button
          type="button"
          id="cancel-join"
          class="ml-2 text-gray-600 hover:underline"
        >
          Cancel
        </button>
      </form>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const btnCreate = document.getElementById("btn-create");
        const btnJoin = document.getElementById("btn-join");
        const formCreate = document.getElementById("form-create");
        const formJoin = document.getElementById("form-join");
        const cancelCreate = document.getElementById("cancel-create");
        const cancelJoin = document.getElementById("cancel-join");

        btnCreate?.addEventListener("click", () => {
          formCreate.classList.remove("hidden");
          formJoin.classList.add("hidden");
        });

        btnJoin?.addEventListener("click", () => {
          formJoin.classList.remove("hidden");
          formCreate.classList.add("hidden");
        });

        cancelCreate?.addEventListener("click", () => {
          formCreate.classList.add("hidden");
        });

        cancelJoin?.addEventListener("click", () => {
          formJoin.classList.add("hidden");
        });
      });
    </script>
  </body>
</html>
